# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Database Settings (PostgreSQL)
# Uncomment and configure when using PostgreSQL instead of SQLite
DB_NAME=nia_sales_assistant
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Gemini AI Settings (Required)
GEMINI_API_KEY=your-primary-gemini-api-key-here
GEMINI_API_KEY_BACKUP=your-backup-gemini-api-key-here
GEMINI_API_KEYS=your-primary-key,your-backup-key

# Gemini API Quota Limits (Optional - defaults shown)
GEMINI_MINUTE_LIMIT=15
GEMINI_DAILY_LIMIT=1500
GEMINI_TOKEN_MINUTE_LIMIT=1000000

# Redis Settings (Required for Celery and Channels)
REDIS_URL=redis://localhost:6380/0

# Google Cloud Configuration (Optional)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Google Meet OAuth2 Settings (Optional - for calendar integration)
GOOGLE_MEET_CLIENT_ID=your-google-oauth-client-id
GOOGLE_MEET_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_MEET_REDIRECT_URI=http://localhost:8000/meeting/oauth/callback/

# Microsoft Outlook/Teams Configuration (Optional - for calendar integration)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/meeting/oauth/outlook/callback/